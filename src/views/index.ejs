<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head.ejs') %>
</head>
<body class="bg-black text-green-200 font-lg font-mono ">
    <%- include('./partials/navbar.ejs') %>
    <div class=" min-h-screen flex"><!--Content Wrapper-->
            <div class="pt-16 bg-gray-900 hidden sm:block">
                <h3 class="font-bold text-lg text-center p-4">Support</h3>
                <div class="flex flex-col p-4 sm:flex-row">
                    <div id="operations">
                        <h4 class="border-b border-green-200">Operations</h4>
                        <!-- Operations go here -->
                    </div>
                    <div id="registers" class="sm:ml-3">
                        <h4 class="border-b border-green-200">Registers</h4>
                        <!-- Registers go here -->
                    </div>
                </div>
            </div>

            <div class="flex-grow-1  sm:flex sm:justify-center w-full border-l border-gray-400 pt-16">
                <div class="w-full md:w-3/4 w3-animate-opacity">
                <h1 class="text-3xl font-bold p-4 align-center">Mips Converter</h1>
                <div class="pr-4 pl-4 pt-4 ">
                    <form id="form">
                        <input id="input" class="bg-transparent text-xl focus:outline-none focus:border-green-200  border-b border-gray-400 py-2 rounded text-gray-400  w-3/4 " type="text" placeholder="Type a mips instruction (Ex: add $s1, $s2, $s3)" required>
                        <input class="bg-transparent border border-gray-400 p-2 sm:mt-0  mt-2 text-green-200 rounded cursor-pointer" type="submit" value="Convert">
                    </form>
                    <small id="error" class="text-red-500 pl-1 text-xsm"></small>
                </div>
                <div class="pl-5 pr-4 flex flex-wrap">
                    <div class="">
                        <table id="table" class="table border border-gray-400 rounded-lg bg-gray-900">
                        
                        </table>
                        <small id="format" class="p-2 text-center"></small>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('./partials/footer.ejs') %>
    
    
    
    <!--
        The following files must always keep this order
    -->
    <script src="js/DOM.js"></script>        <!-- For helper functions to manipulate the DOM-->
    <script src="js/CLASSES.js"></script>    <!-- For CSS classes used in Javascript-->
    <script src="js/TASKS.js"></script>      <!-- For utility functions to perform tasks -->
    <script src="js/PROCESSES.js"></script>  <!-- For for calling utils.js functiion in order to perform tasks -->
    <script src="js/GET.js"></script>
    <script src="js/POST.js"></script>       <!-- For processing all POST requests --> 
    <script src="js/converter.js"></script>
</body>
</html>